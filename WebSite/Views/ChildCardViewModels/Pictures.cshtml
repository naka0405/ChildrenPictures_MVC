@model WebSite.Models.ChildCardViewModel

@{
    ViewBag.Title = "Pictures";
}

<h2>Pictures</h2>

<p>
    @Html.ActionLink("Create New", "../PictureViewModels/Create", new { id = Model.Id })
</p>
<table class="table">    
   @for(var i=0; i<1;i++)
   { 
        <tr>            
            <th>
               @Html.DisplayNameFor(x=>Model.Pictures[i].Name)
            </th>
            <th>
                @Html.DisplayNameFor(x => Model.Pictures[i].Data)
            </th>
            <th>
                @Html.DisplayNameFor(x=> Model.Pictures[i].Image)
            </th>
            <th></th>
        </tr>
    }

        @foreach (var item in Model.Pictures)
        {
            <tr>                
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>                    
                    <a href="@item.Image.ToString()">Image</a>
                </td>
                <td>                   
                    @Html.ActionLink("Details", "../PictureViewModels/Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete",  "../PictureViewModels/Delete", new { id = item.Id })
                   
                </td>
            </tr>
        }

    </table>
